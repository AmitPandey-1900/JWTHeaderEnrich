package org.example.service;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.MockitoAnnotations;
import org.springframework.beans.factory.annotation.Value;

import java.util.HashMap;
import java.util.Map;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.mockito.Mockito.when;

public class ClientIdServiceTest {

    @Mock
    private Map<String, String> clientIdMapMock;

    @InjectMocks
    private ClientIdService clientIdService;

    @BeforeEach
    public void setUp() {
        MockitoAnnotations.openMocks(this);

        // Mock behavior of clientIdMapMock
        Map<String, String> mockData = new HashMap<>();
        mockData.put("user1", "clientId1");
        mockData.put("user2", "clientId2");
        when(clientIdMapMock.get("user1")).thenReturn("clientId1");
        when(clientIdMapMock.get("user2")).thenReturn("clientId2");

        // Assign mocked map to the clientIdService
        clientIdService.clientIdMap = mockData;
    }

    @Test
    public void testGetClientId() {
        // Test getClientId method
        assertEquals("clientId1", clientIdService.getClientId("user1"));
        assertEquals("clientId2", clientIdService.getClientId("user2"));
    }
}
